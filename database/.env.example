# MongoDB Authentication
MONGO_ADMIN_USER=secret-santa-admin
MONGO_ADMIN_PASSWORD=your-secure-password-here

# MongoDB Database
MONGO_DATABASE=secret-santa

# MongoDB Connection
MONGODB_URI="mongodb://secret-santa-admin:your-secure-password-here@router-01:27017/secret-santa?authSource=admin&readPreference=secondaryPreferred"

# MongoDB Replica Set Names
MONGO_CONFIG_REPLICA_SET=mongo-config-rs
MONGO_SHARD1_REPLICA_SET=mongo-shard-01-rs
MONGO_SHARD2_REPLICA_SET=mongo-shard-02-rs
MONGO_SHARD3_REPLICA_SET=mongo-shard-03-rs

# SSL Configuration
MONGO_SSL_MODE=preferTLS
MONGO_SSL_ALLOW_INVALID_CERTS=true
